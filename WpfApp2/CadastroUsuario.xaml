<Window x:Class="WpfApp2.CadastroUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="CadastroUsuario" Height="450" Width="494">
    <Grid Margin="0,0,27,0">
        <TextBox HorizontalAlignment="Left" Margin="37,48,0,0" TextWrapping="Wrap" Text="{Binding Nome}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="37,87,0,0" TextWrapping="Wrap" Text="{Binding Email}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="37,132,0,0" TextWrapping="Wrap" Text="{Binding Senha}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salvar" HorizontalAlignment="Left" Margin="122,175,0,0" VerticalAlignment="Top" Click="bnt_Salvar"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="37,17,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="37,61,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha" HorizontalAlignment="Left" Margin="37,106,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
